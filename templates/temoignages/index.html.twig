{% extends 'baseAdmin.html.twig' %}

{% block title %}Temoignages index{% endblock %}

{% block body %}
    <h1>Temoignages index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImageName</th>
                <th>Username</th>
                <th>Contenue</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for temoignage in temoignages %}
            <tr>
                <td>{{ temoignage.id }}</td>
                <td>{{ temoignage.imageName }}</td>
                <td>{{ temoignage.username }}</td>
                <td>{{ temoignage.contenue }}</td>
                <td>{{ temoignage.createdAt ? temoignage.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('temoignages_show', {'id': temoignage.id}) }}">show</a>
                    <a href="{{ path('temoignages_edit', {'id': temoignage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('temoignages_new') }}">Create new</a>
{% endblock %}
