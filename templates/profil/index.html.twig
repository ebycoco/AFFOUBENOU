{% extends 'baseProfile.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
<div class="form-maj"> 
    <div class="row personnelle">
        <div class="row mt-3">
            <div class="col-md-6">
                <div class="card border-primary mb-3 col-md-6 card-personnelle" style="max-width: 27rem;">
                    <div class="card-header card-header-personnel">Informations personnelles</div>
                    <div class="card-body text-primary">
                        <h5 class="card-title card-title-personnel">{{app.user.prenom}}</h5>
                        <p class="card-text text1">{{app.user.email}}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-primary mb-3 col-md-6 card-personnelle" style="max-width: 27rem;">
                    <div class="card-header card-header-personnel">ADRESSES</div>
                    <div class="card-body text-primary">
                        <h5 class="card-title card-title-personnel">Adresse</h5>
                        <p class="card-text text1">{{app.user.ville}}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="card border-primary mb-3 col-md-6 card-personnelle" style="max-width: 27rem;">
                    <div class="card-header card-header-personnel">References de communications</div>
                    <div class="card-body text-primary">

                        <p class="card-text text2">vous êtes abonné sur notre newsletters.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-primary mb-3 col-md-6 card-personnelle" style="max-width: 27rem;">
                    <div class="card-header card-header-personnel">Credit Affoubenou</div>
                    <div class="card-body text-primary">

                        <p class="card-text text2"><img src="{{asset('images/wallet.png')}}" alt="" width="50" height="50"> 20.000f</p>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</div>
{% endblock %}