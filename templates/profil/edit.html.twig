{% extends 'baseProfile.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
<div class="form-maj ">
{% for message in app.flashes('warning') %}
			<div class="alert alert-warning text-center">
				{{ message }}
			</div>
		{% endfor %}
    <h1 class="text-center mb-4">Mise Ã  jour du profile</h1>
    {{ form_start(form) }} 
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_row(form.email,{'label':false}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.nom,{'label':false}) }}
