{% extends 'basecommande.html.twig' %}

{% block title %}Affiche index{% endblock %}

{% block body %}
    <h1>Affiche index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Info</th>
                <th>Quantite</th>
                <th>Etat</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for affiche in affiches %}
            <tr>
                <td>{{ affiche.id }}</td>
                <td>{{ affiche.info }}</td>
                <td>{{ affiche.quantite }}</td>
                <td>{{ affiche.etat }}</td>
                <td>{{ affiche.createdAt ? affiche.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ affiche.updatedAt ? affiche.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('profile_affiche_show', {'id': affiche.id}) }}">show</a>
                    <a href="{{ path('profile_affiche_edit', {'id': affiche.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('profile_affiche_new') }}">Create new</a>
{% endblock %}
