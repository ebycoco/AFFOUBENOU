{% extends 'basecommande.html.twig' %}

{% block title %}Badges{% endblock %}

{% block body %}
    <h1>Badges</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ badge.id }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ badge.info }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ badge.quantite }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ badge.prix }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ badge.etat }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ badge.createdAt ? badge.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ badge.updatedAt ? badge.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('profile_badges_index') }}">back to list</a>

    <a href="{{ path('profile_badges_edit', {'id': badge.id}) }}">edit</a>

    {{ include('profil/graphisme/badges/_delete_form.html.twig') }}
{% endblock %}
