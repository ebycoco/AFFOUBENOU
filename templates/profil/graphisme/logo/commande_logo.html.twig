{% extends 'basecommande.html.twig' %}

{% block title %}Hello CommandeGraphismeController!{% endblock %}

{% block body %}
<section class="formulaire-commande">
    <div class="container mb-4">  
            {{ form_start(form) }}
            <div class="row mt-3">
                <div class="col-md-12 mt-3"> 
                    <div class="form-group"> 
                        <h5 class=" text-center text-muted mb-3">Entrez le nom du logo <span class="text-required">*</span></h5>
                        {{ form_row(form.nomLogo,{'label':false}) }}
                    </div> 
                </div>
                <div class="col-md-12">
                    <h5  class=" text-center text-muted mb-3">Desirez vous changer de couleur ?</h5>
                    <div class="row">
                        <div class="col-md-5"></div>
                        <div class="form-group col-md-2">
                            {{ form_row(form.couleur,{'label':false}) }}
                        </div>
                        <div class="col-md-5"></div>
                    </div>
                      
                </div>
                <div class="col-md-12">
                    <h5  class=" text-center text-muted mb-3">Si vous souhaitez apportez des modifications personnelles sur votre logo </h5>
                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-md-8">
                            <div class="form-group">
                        {{ form_row(form.modification,{'label':false}) }}
                    </div> 
                        </div>
                        <div class="col-md-2"></div>
                    </div>
                </div>
            </div>
            <div class="row">
            <div class="col-md-4"></div>
                <div class="col-md-4 text-center mb-3 "> 
                    <h5 class="text-center text-muted mb-3">Si vous avez un exemple telechargez le ici</h5>
                    <i class="fa fa-download "></i>
                    <div class="form-group col-md-12">
                        {{ form_row(form.imageFile) }}
                    </div> 
                </div> 
                <button type="submit " class="btn btn-order bouton-envoyer ">Envoyer</button> 
                <div class="col-md-4"></div>
            {{ form_end(form) }}
        </div>
    </div>
</section>
{% endblock %} 
