{% extends 'baseAdmin.html.twig' %}

{% block title %}Articles
{% endblock %}

{% block body %}
	<div class="container">
        <h1>{{ article.titre }}</h1>
        <a href="{{ path('admin_articles_index') }} "class="btn btn-primary">Retour à la liste</a>
        <div class="row mt-4">
            <div class="col-md-2 ">
                <p>numéro d'article</p>
                <b class="text-rigth">{{ article.id }}</b>
            </div>
            <div class="col-md-6">
            <p class="text-center">slug</p>
                <h3 class="text-center">{{ article.slug }}</h3>
            </div>
            <div class="col-md-2">
            <p>Date de création</p>
                <h6 class="text-center" style="background-color: green;color:white;border-radius:50px;width:20vh;">{{ article.createdAt ? article.createdAt|date('d-F-Y') : '' }}</h6>
            </div>
            <div class="col-md-2">
                <p>Date de modification</p>
                <h6 class="text-center" style="background-color: blue;color:white;border-radius:50px;width:20vh;">{{ article.updatedAt ? article.updatedAt|date('d-F-Y') : '' }}</h6>
            </div>
        </div>
        <div class="row">
            <div class=" col-md-12 bg-white pt-3 pl-4 pr-3 mb-3 " style="border-radius: 20px;">
                <p class="">{{article.contenu | raw}}</p> 
            </div>
        </div> 
        <div class="row">
            <div class="col-md-6 mb-4 text-center">  
	        <a href="{{ path('admin_articles_edit', {'id': article.id}) }}" class="btn btn-secondary">edit</a> 
            </div>
            <div class="col-md-6 mb-4 text-center">
                {{ include('Admin/articles/_delete_form.html.twig') }}
            </div> 
        </div>
	
    </div>
{% endblock %}
