{% extends 'baseAdmin.html.twig' %}


{% block title %}MainTemplateSite index{% endblock %}

{% block body %}
    <h1>MainTemplateSite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImageName</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for main_template_site in main_template_sites %}
            <tr>
                <td>{{ main_template_site.id }}</td>
                <td>{{ main_template_site.imageName }}</td>
                <td>{{ main_template_site.createdAt ? main_template_site.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ main_template_site.updatedAt ? main_template_site.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_main_template_site_show', {'id': main_template_site.id}) }}">show</a>
                    <a href="{{ path('admin_main_template_site_edit', {'id': main_template_site.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<a href="{{ path('admin_main_template_site_new') }}">Create new</a>

{% endblock %}
