 {% extends 'baseAdmin.html.twig' %}

{% block title %}Commande badge index{% endblock %}

{% block body %}
<h1>Commande Badge index</h1>

<a class="btn btn-dark mb-4 mt-4" href="{{ path('admin_badge_index') }}">Aller à la partie dépot</a>
<div class="row">  
    <div class="col-md-12"> 
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">Date de la commande</th> 
                    <th class="text-center">Date de la livraison</th> 
                    <th class="text-center">Nom du client</th> 
                    <th class="text-center">Voir</th>
                </tr>
            </thead>
            <tbody>
                {% for badges_finale in badges_finales %}
                <tr>
                    <td class="text-center">
                        {{badges_finale.badge.createdAt ? badges_finale.badge.createdAt|date('d-m-Y H:m') : ''}}
                    </td>
                    <td class="text-center">
                        {{badges_finale.createdAt ? badges_finale.createdAt|date('d-m-Y H:m') : ''}}
                    </td>
                    <td class="text-center">
                        {{badges_finale.badge.user.prenom}}
                    </td>
                    <td class="text-center">
                        <a class="btn btn-success"
                            href="{{ path('admin_badges_finale_show', {'id': badges_finale.id}) }}"> <i
                                class="fas fa-eye"></i> sans filigrame</a>
                    </td>
                </tr>
                {% endfor %}
                 
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

