{% extends 'baseAdmin.html.twig' %}

{% block title %}Equipes index{% endblock %}

{% block body %}
    <h1>Equipes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th> 
                <th>Profession</th>
                <th>Contact</th>
                <th>Email</th>
                <th>Sexe</th> 
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipe in equipes %}
            <tr>
                <td>{{ equipe.id }}</td>
                <td>{{ equipe.nom }}</td>
                <td>{{ equipe.prenom }}</td> 
                <td>{{ equipe.profession }}</td>
                <td>{{ equipe.contact }}</td>
                <td>{{ equipe.email }}</td>
                <td>{{ equipe.sexe }}</td> 
                <td>
                    <a href="{{ path('equipes_show', {'id': equipe.id}) }}">show</a>
                    <a href="{{ path('equipes_edit', {'id': equipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('equipes_new') }}">Create new</a>
{% endblock %}
